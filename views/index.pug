extends layout

block content
  section.hero
    .hero-inner
      h1.hero-title
        | CYRUS
        span.highlight Collaborative Canvas for Small Teams
      p.hero-subtitle
        | Claim your space, paint with friends, and turn pixels into beautiful stories in real time.

      .hero-actions
        a.btn.btn-primary(href="/register") Get Started
        a.btn.btn-outline(href="/gallery") Explore Gallery

    .hero-art
      .pixel-orbit
      .pixel-tile-grid
      .floating-card
        h3.card-title Live Collaboration
        p.card-text Watch your team draw with you, stroke by stroke.
