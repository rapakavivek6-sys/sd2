extends ../layout

block content
  // SUPER IMPORTANT: override any weird CSS on this page
  style.
    /* Make sure nothing can sit on top of the login form */
    .auth-hero,
    .auth-layout,
    .auth-panel,
    .auth-card,
    .auth-card * {
      position: relative !important;
      z-index: 9999 !important;
      pointer-events: auto !important;
      opacity: 1 !important;
    }

