doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= title || 'CYRUS – Collaborative Art Board'
    link(rel="stylesheet", href="/css/styles.css")
  body(class="theme-dark")
    header.site-header
      .logo-area
        a.logo(href="/")
          span.logo-mark C
          span.logo-text CYRUS
      nav.site-nav
        ul.nav-list
          li: a(href="/") Home
          li: a(href="/gallery") Gallery
          li: a(href="/login") Login
          li: a(href="/register") Register

    main.main-container
      block content

    footer.site-footer
      p © #{new Date().getFullYear()} CYRUS. Collaborative Art for Everyone.

    block scripts
      //- Your page-specific scripts can be added in views if needed
